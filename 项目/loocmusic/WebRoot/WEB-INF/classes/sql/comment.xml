<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.looc.music.dao.CommentDao">
		<!--  写评论 -->
		<insert id="addComment" parameterType="com.looc.music.bean.CommentBean" flushCache="true">  
				INSERT INTO
					comments(
						userID,
						magazineID,
						`comment`,
						commentTime
					)
				VALUES
					(
						#{userID},
						#{magazineID},
						#{comment},
						NOW() 
					)
	</insert>  
</mapper>  